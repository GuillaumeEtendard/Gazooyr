<h2>Edit</h2>

<%= form_for(@page) do |f| %>

    <% if @page.errors.any? %>
        <div id="error_explanation">
          <div class="alert alert-danger">
            <%= pluralize(@page.errors.count, "error") %>.
          </div>
          <ul>
            <% @page.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="field" id="page_title">
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </div>

    <div class="field" id="page_slug">
      <%= f.label :slug %><br>
      <%= f.text_field :slug %>
    </div>

    <div class="field" id="page_content">
      <%= f.label :content %><br>
      <%= f.text_area :content, size: "60x12" %>
    </div>

    <div class="actions">
      <%= f.submit "Sauvegarder" %>
    </div>
<% end %>

<%= link_to "Back", :back %>
